mixin img(name,alt)
	img(src="assets/image/"+name,alt=alt)
mixin img-border(name,alt)
	img.border(src="assets/image/"+name,alt=alt)

mixin columnist(img,alt,name,desc)
	.columnist
		.img-col
			+img(img,alt)
		.desc
			p.f-700=name
			h5.f-700.gray=desc

mixin columna(date,title,img,alt,name,desc)
	.col-5
		.view-column
			p.text-center=date
			h4.text-center=title
			+columnist(img,alt,name,desc)

