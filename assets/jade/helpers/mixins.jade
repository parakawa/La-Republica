mixin titulares(title,img,alt,titleimg,subtitle)
	.titulares.text-center
		h5.red.f-700=title
		a(href="")
			.img-titular
				img.w-100(src="assets/image/"+img,alt=alt)
				.shadow
					h5.white=titleimg
		h6 Todo sobre 
			span.f-700=subtitle
mixin aweita-item(enlace,img,subtitle)
	.aweita-item
		a(href=enlace)
			.img-item
				img(src="assets/image/"+img,alt="img-aweita")
			h6=subtitle
